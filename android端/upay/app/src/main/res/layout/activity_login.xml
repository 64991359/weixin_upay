<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/login_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPAY个人支付系统"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit1"
            android:ems="10"
            android:hint="输入设备账号(非用户账号)"
            android:inputType="number"
            android:padding="10dp"
            android:text=""
            android:textSize="14sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/login_pwd"
            android:background="@drawable/edit1"
            android:hint="请输入登录密码..."
            android:text=""
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.07" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:text="登录"
                android:layout_width="wrap_content"
                android:id="@+id/login_btn"
                android:onClick="login_submit"
                android:layout_weight="0.43"
                android:background="@drawable/button1"
                android:textColor="@android:color/background_light"
                android:layout_height="46dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shanghuzhuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingBottom="@dimen/padding12dp"
                android:paddingTop="@dimen/padding12dp"
                android:text="注册新用户"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/color6"
                android:textSize="16sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/wangjimima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingBottom="@dimen/padding12dp"
                android:paddingTop="@dimen/padding12dp"
                android:text="找回密码"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/color5"
                android:textSize="16sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <View
            android:background="#ececec"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tiyanzhanghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:paddingBottom="@dimen/padding10dp"
            android:paddingTop="@dimen/padding10dp"
            android:text="作者微信：xianglou"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/color5"
            android:textSize="14sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>